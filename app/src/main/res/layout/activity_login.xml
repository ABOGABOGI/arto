<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gedung_black"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_bpr" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_40dp"
                    android:layout_marginRight="@dimen/value_40dp"
                    android:src="@drawable/bpr_mobile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_10dp"
                    android:text="Selamat Datang di BPR Arto Moro Mobile "
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_16dp"
                android:layout_marginLeft="@dimen/value_16dp"
                android:layout_marginRight="@dimen/value_16dp"
                android:layout_marginTop="@dimen/value_16dp"
                android:background="@drawable/edit_style"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ext_user"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_8dp"
                    android:layout_marginLeft="@dimen/value_16dp"
                    android:layout_marginRight="@dimen/value_16dp"
                    android:layout_marginTop="@dimen/value_8dp"
                    android:background="@drawable/edit_style"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="@dimen/value_16dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/value_16dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="@dimen/text_20" />

                <EditText
                    android:id="@+id/edt_pass"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_8dp"
                    android:layout_marginLeft="@dimen/value_16dp"
                    android:layout_marginRight="@dimen/value_16dp"
                    android:layout_marginTop="@dimen/value_8dp"
                    android:background="@drawable/edit_style"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/value_16dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/value_16dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="@dimen/text_20" />


                <Button
                    android:id="@+id/btn_login"
                    style="@style/Font_family_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_8dp"
                    android:layout_marginLeft="@dimen/value_16dp"
                    android:layout_marginRight="@dimen/value_16dp"
                    android:layout_marginTop="@dimen/value_8dp"
                    android:background="@drawable/red_style"
                    android:text="LOGIN"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ns"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_sigin"
            style="@style/Font_family_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_8dp"
            android:layout_marginLeft="@dimen/value_16dp"
            android:layout_marginRight="@dimen/value_16dp"
            android:layout_marginTop="@dimen/value_8dp"
            android:layout_weight="1"
            android:background="@drawable/white_style"
            android:text="Registrasi"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <Button
            android:id="@+id/btn_forget"
            style="@style/Font_family_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_8dp"
            android:layout_marginLeft="@dimen/value_16dp"
            android:layout_marginRight="@dimen/value_16dp"
            android:layout_marginTop="@dimen/value_8dp"
            android:background="@drawable/white_style"
            android:text="Lupa Password"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
