<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/value_10dp"
    android:paddingRight="@dimen/value_10dp"
    android:paddingTop="@dimen/value_10dp">

    <TextView
        android:id="@+id/txt_tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="2019/09/12"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txt_transkasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUka Tabungan"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_10dp"
        android:text="Selesai" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/abu" />

</LinearLayout>