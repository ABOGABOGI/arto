<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="com.example.cyber_net.apps.Topup">
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_ket"
        android:text="Tidak Ada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Tanggal Pengajuan : Tidak Ada"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Status : Tidak Ada"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/tv_nominal"
        android:text="Nominal : 0"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek STATUS"
        android:id="@+id/btn_status"
        android:visibility="gone"
        android:onClick="cek_status"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BATALKAN"
        android:id="@+id/btn_batal"
        android:onClick="batal"
        />
</LinearLayout>
